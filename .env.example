# MLflow Configuration
MLFLOW_TRACKING_URI=http://127.0.0.1:5001
# For remote MLflow server, use: http://<mlflow-server-private-ip>:5001

# AWS Configuration
AWS_DEFAULT_REGION=us-west-2
AWS_PROFILE=default

# S3 Configuration (for MLflow artifacts)
# MLFLOW_S3_ENDPOINT_URL=  # Leave empty for standard S3
# AWS_ACCESS_KEY_ID=       # Use IAM roles instead
# AWS_SECRET_ACCESS_KEY=   # Use IAM roles instead

# Model Serving Configuration
MODEL_URI=models:/power-nowcast/Production
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO

# Data Configuration
DATA_SOURCE=synthetic  # synthetic, nyiso, caiso
FORECAST_HORIZON=30    # minutes
FEATURE_LAGS=1,2,3,6,12,24
ROLLING_WINDOWS=3,6,12

# Model Configuration
XGBOOST_N_ESTIMATORS=500
XGBOOST_MAX_DEPTH=6
LSTM_HIDDEN_SIZE=64
LSTM_LAYERS=2
LSTM_EPOCHS=10
BATCH_SIZE=256

# Infrastructure (for Terraform)
# TF_VAR_create_dev_instance=true
# TF_VAR_create_prod_instance=false
# TF_VAR_create_mlflow_server=false
# TF_VAR_use_custom_ami=false
